extends base.pug

block content
    main
      .flex-box.ma--top-side
        img.icon--large(src='../img/left-arrow.svg' alt='Back Arrow' onclick='history.back()')
        .text--h1.ma--side Add Link
      form.form--add-link.box-container
        input#link.input--text(type='text' placeholder='Link')
        input#link-name.input--text(type='text' placeholder='Link Name')
        input#link-description.input--text(type='text' placeholder='Description')
        input#link-image.input--text(type='file' accept='image/*' placeholder='Link Image')
        button.btn.btn--primary(type='submit') Save